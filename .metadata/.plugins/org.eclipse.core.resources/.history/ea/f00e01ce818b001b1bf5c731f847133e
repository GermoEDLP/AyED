package practica1b;

	public class Datos {

		private int min;
		private int max;
		private double prom;

		public int getMin() {
			return min;
		}

		public void setMin(int min) {
			this.min = min;
		}

		public int getMax() {
			return max;
		}

		public void setMax(int max) {
			this.max = max;
		}

		public double getProm() {
			return prom;
		}

		public void setProm(double prom) {
			this.prom = prom;
		}

	}

	public class Calculo {
		public  Datos calcular(int[] datos) {
			int max = 0, min = 0;
			for (int i = 0; i < datos.length; i++) {
				if (datos[i] > max)
					max = datos[i];
				if (datos[i] < min)
					min = datos[i];
			}
			Datos objeto = new Datos();
			objeto.setMax(max);
			objeto.setMin(min);
			return objeto;
		}
	}

