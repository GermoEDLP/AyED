package practica1b;

public class Calculo {
	public static Datos calcular(int[] datos) {
		int max = 0, min = 9999, cont = 0, total = 0;
		for (int i = 0; i < datos.length; i++) {
			if (datos[i] > max)
				max = datos[i];
			if (datos[i] < min)
				min = datos[i];
			cont++;
			total+=datos[i];
		}
		Datos objeto = new Datos();
		double prom = total/cont;
		objeto.setMax(max);
		objeto.setMin(min);
		objeto.setProm(prom);
		return objeto;
	}
}
